From: shiraten <tenmondu34@gmail.com>
Date: Wed, 3 Apr 2024 19:22:35 +0200
Subject: [PATCH] add mpu9250 to rpi3b dts

---
 arch/arm/boot/dts/bcm2710-rpi-3-b.dts | 7 +++++++
 1 file changed, 7 insertions(+)

diff --git a/arch/arm/boot/dts/bcm2710-rpi-3-b.dts b/arch/arm/boot/dts/bcm2710-rpi-3-b.dts
index 10485ad72d29..4d652963a39a 100644
--- a/arch/arm/boot/dts/bcm2710-rpi-3-b.dts
+++ b/arch/arm/boot/dts/bcm2710-rpi-3-b.dts
@@ -234,6 +234,13 @@ &i2c1 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&i2c1_pins>;
 	clock-frequency = <100000>;
+	mpu9250: mpu9250@68{
+		compatible = "inven,mpu9250";
+		reg = <0x68>;
+		inven,secondary_type = "compass";
+		inven,secondary_name = "ak8963";
+		inven,secondary_reg = <0x0c>;
+	};
 };
 
 &i2c2 {
